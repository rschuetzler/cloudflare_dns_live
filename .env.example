# Cloudflare API Configuration
# Get your API token from https://dash.cloudflare.com/profile/api-tokens
# Create a token with Zone:Read and Zone:DNS:Edit permissions for your zone
CLOUDFLARE_TOKEN=your_cloudflare_api_token_here

# The Zone ID for your domain
# Find this in your Cloudflare dashboard under the zone overview
CLOUDFLARE_ZONE=your_cloudflare_zone_id_here

# The domain name for your Cloudflare zone (e.g., example.com)
CLOUDFLARE_DOMAIN=your_domain_name_here

# Access password for the application
# Set this to a secure password that students will use to access the portal
ACCESS_PASSWORD=your_secure_password_here

# Phoenix Configuration
SECRET_KEY_BASE=your_secret_key_base_here

# Optional: Set the port (defaults to 4000)
# PORT=4000

# Optional: Set the environment
# MIX_ENV=prod